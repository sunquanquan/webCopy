doctype html
html
   head
      title #{title}
      link(rel='stylesheet', href='/css/base.min.css')
      link(rel='stylesheet', href='/css/login_form.css')
      link(rel='stylesheet', href='/css/login_pop.css')
   body
      div.login-pop.mpt.a_login_pop
         h2.login-pop-title 绿岸通行证
         form(action="http://passport.iwgame.com/sso/login.do",autocomplete="off",class="e_login_form",id="loginForm",method="post",onsubmit="return false;")
            p.login-form-error.e_login_error
            ul.clearfix.login-form
               li.fl
                  div.clearfix.login-form-w
                     input(type="text",name="identityId",class="fl e_login_account e_mail_account",maxlength="50",datatype="account",nullmsg="请输入通行证账号",errormsg="通行证格式不正确",sucmsg=" ",placeholder="通行证账号")
                     i.login-public.login-public-account
               li.fl
                  div.clearfix.login-form-w
                     input(type="password",name="credential",class="fl e_login_pass",maxlength="16",datatype="password",nullmsg="请输入密码",errormsg="密码格式错误",sucmsg=" ",placeholder="密码")
                     i.login-public.login-public-pass
               li.fl.login-form-cap-li.e_cap_pos
                  div.fl.login-form-w.login-form-captcha
                     input(type="text",name="captcha",class="fl e_login_captcha",maxlength="6",datatype="captcha",nullmsg="请输入图片上的数字或字母，不区分大小写",errormsg="验证码格式不正确",sucmsg=" ",data-cl="0",placeholder="验证码")
                  a(href="javascript:;",title="看不清？重新换张！")
                     img(width="150",height="48",style="display:none;")
                     input(type="hidden",name="",value="")
            input(type="submit",value="登    录",class="block login-form-submit e_login_submit")
            input(type="hidden",name="accountType",value="PERSONALITY")
            input(type="hidden",name="gotourl",value="")
            input(type="hidden",name="ls",value="cs")
            input(type="hidden",name="pid",value="")
         ul.clearfix.login-pop-other.e_login_pop_other
            li.fl.tar
               a(href="javascript:;") 忘记密码?
            li.fl.tar
               a(href="javascript:;") 忘记账号?
            li.fl.tac
               a(href="javascript:;") 注册
            li.fl
               a(href="javascript:;") 帮助中心
      div.login-pop.hide.e_login_captcha2
         a(href="javascript:;",class="login-pop-close e_login_captcha2_close",title="关闭")
         h2.login-pop-title 请再次输入验证码
         p.login-form-error.e_login_captcha2_error
         form(action="http://passport.iwgame.com/sso/ploginpage?ls=cs&amp;loginback=http://cs.iwgame.com/cs/loginback.do&amp;pid=",
         autocomplete="off",class="e_login_captcha2_form",method="post",onsubmit="return false;")
            ul.clearfix.login-form
               li.fl
                  div.fl.login-form-w.login-form-captcha
                     input(type="text",class="fl",maxlength="6",datatype="captcha",nullmsg="请输入图片上的数字或字母，不区分大小写",
                     errormsg="验证码格式不正确",sucmsg=" ")
                  a(href="javascript:;",title="看不清？重新换张！")
                     img(width="150",height="48",style="display:none;")
                     input(type="hidden",name="",value="")
            input(type="submit",value="登    录",class="block login-form-submit e_login_captcha2_submit")
      script(src='/js/lib/frame.min.js')
      script.
            MPT.Config = {
               'space_http': '',
               'passport_http': '',
               'passport_res_http': '',
               'pay_http': '',
               'cs_http': '',
               'iwgame_http': '',
               'lvanol_http': '',
               'iwgame_sslres': ''
            }
            MPT.pid = '';
      script(src='/js/ctrl/product.js')
      script(src = '/js/login/miniplanet_login_nest.js')



